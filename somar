<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Questão 3</title>
</head>
<body>
    A: <input type="text" id="valorA"/><br/>
    B: <input type="text" id="valorB"/><br/>
    Operação:
    <select id="op"  onchange="calculo()">
	    <option value="soma">Somar</option>
	    <option value="sub">Subtrair</option>
	    <option value="mult">Multiplicar</option>
	    <option value="div">Dividir</option>
    </select>
    <p id="resultado"></p>
</body>
<script>
    function calculo() {
    var op = document.getElementById("op").value;
    var x = document.getElementById("valorA").value;
    var y = document.getElementById("valorB").value;
    if (op == "soma"){
        var soma = parseInt(x) + parseInt(y);
        document.getElementById("resultado").innerHTML = "O resultado da soma é: " + soma;
    } 
    
    else if (op == "sub"){
        var sub = parseInt(x) - parseInt(y);
        document.getElementById("resultado").innerHTML = "O resultado da subtração é: " + sub;
    }

    else if (op == "mult"){
        var mult = parseInt(x) * parseInt(y);
        document.getElementById("resultado").innerHTML = "O resultado da multiplicação é: " + mult;
    } 

    else{
        var div = parseInt(x) / parseInt(y);
        document.getElementById("resultado").innerHTML = "O resultado da divisão é: " + div;
    }

}
</script>
</html>
